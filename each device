# Convert timestamp to datetime
synthetic_dataset['Timestamp'] = pd.to_datetime(synthetic_dataset['Timestamp'], unit='ms')

# Get unique devices in the dataset
unique_devices = synthetic_dataset['DeviceName'].unique()

# Plot time series for each device
for device in unique_devices:
    plt.figure(figsize=(12, 6))
    
    # Filter dataset for the current device
    device_data = synthetic_dataset[synthetic_dataset['DeviceName'] == device]
    
    # Plotting the time series
    plt.plot(device_data['Timestamp'], device_data['PowerStatus'], marker='o')
    
    # Customize plot
    plt.title(f'{device} Device Usage Over Time')
    plt.xlabel('Timestamp')
    plt.ylabel('PowerStatus')
    
    # Display the plot
    plt.show()



